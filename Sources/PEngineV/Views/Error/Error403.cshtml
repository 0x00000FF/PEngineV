@inject Microsoft.Extensions.Localization.IStringLocalizer<PEngineV.SharedResource> L
@{
    ViewData["Title"] = L["Error_403_Title"];
}

<div class="pe-center-panel">
    <div class="pe-panel">
        <div class="pe-panel-header">
            <i class="fa-solid fa-ban pe-panel-icon"></i>
            @L["Error_403_Title"]
        </div>
        <div class="pe-panel-body pe-text-center">
            <div class="pe-error-code">403</div>
            <h2 class="pe-mb-2">@L["Error_403_Message"]</h2>
            <p class="pe-text-muted pe-mb-3">@L["Error_403_Description"]</p>
            <div class="pe-btn-group">
                <a asp-controller="Home" asp-action="Index" class="pe-btn pe-btn-primary">
                    <i class="fa-solid fa-house"></i>
                    @L["Error_BackToHome"]
                </a>
                @if (!User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Account" asp-action="Login" class="pe-btn pe-btn-secondary">
                        <i class="fa-solid fa-right-to-bracket"></i>
                        @L["Nav_Login"]
                    </a>
                }
            </div>
        </div>
    </div>
</div>
