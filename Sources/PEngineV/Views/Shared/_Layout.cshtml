@inject Microsoft.Extensions.Localization.IStringLocalizer<PEngineV.SharedResource> L
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @L["AppTitle"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fonts-archive/Freesentation/subsets/Freesentation-dynamic-subset.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=M+PLUS+1p:wght@400;500;700&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@@7.2.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PEngineV.styles.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/passkey.js" asp-append-version="true"></script>
</head>
<body>
    <header class="pe-header">
        <div class="pe-header-inner">
            <a class="pe-brand" asp-controller="Home" asp-action="Index"><span class="pe-brand-beta">@L["Badge_Beta"]</span>@L["AppTitle"]</a>
            <button class="pe-theme-toggle" id="pe-theme-toggle" type="button" aria-label="@L["Theme_Toggle_Aria"]">
                <i class="fa-solid fa-sun pe-theme-icon-light"></i>
                <i class="fa-solid fa-moon pe-theme-icon-dark"></i>
            </button>
            <button class="pe-nav-toggle" id="pe-nav-toggle" type="button" aria-label="@L["Nav_Toggle_Aria"]">
                <i class="fa-solid fa-bars"></i>
            </button>
            <nav class="pe-nav-area" id="pe-nav-area">
                <ul class="pe-nav">
                    <li class="pe-nav-item">
                        <a class="pe-nav-link" asp-controller="Home" asp-action="Index">@L["Nav_Home"]</a>
                    </li>
                    <li class="pe-nav-item">
                        <a class="pe-nav-link" asp-controller="Post" asp-action="List">@L["Nav_Posts"]</a>
                    </li>
                    <li class="pe-nav-item">
                        <a class="pe-nav-link" asp-controller="Guestbook" asp-action="Index">@L["Nav_Guestbook"]</a>
                    </li>
                </ul>
            </nav>
            <form class="pe-search-form" asp-controller="Search" asp-action="Index" method="get">
                <div class="pe-search-box">
                    <i class="fa-solid fa-magnifying-glass pe-search-icon"></i>
                    <input class="pe-search-input" type="search" name="q"
                           placeholder="@L["Search_Placeholder"]"
                           aria-label="@L["Search_Aria"]" />
                </div>
            </form>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a class="pe-user-link" asp-controller="Post" asp-action="Write" aria-label="@L["Nav_NewPost"]">
                    <i class="fa-solid fa-plus"></i>
                </a>
                <a class="pe-user-link" asp-controller="MyPage" asp-action="Index" aria-label="@L["Nav_MyPage"]">
                    <i class="fa-solid fa-user-gear"></i>
                </a>
                <form method="post" asp-controller="Account" asp-action="Logout" class="pe-logout-form">
                    <button type="submit" class="pe-user-link pe-btn-link" aria-label="@L["Account_Button_Logout"]">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </button>
                </form>
            }
            else
            {
                <a class="pe-user-link" asp-controller="Account" asp-action="Login" aria-label="@L["Nav_User_Aria"]">
                    <i class="fa-solid fa-user"></i>
                </a>
            }
        </div>
    </header>

    <main class="pe-main">
        <div class="pe-container">
            @RenderBody()
        </div>
    </main>

    <footer class="pe-footer">
        <div class="pe-footer-inner">
            <span>@L["Footer_Copyright"]</span>
            <span>PEngineV</span>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
